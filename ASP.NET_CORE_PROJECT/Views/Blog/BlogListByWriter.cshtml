@using EntityLayer.Concrete
@model List<Blog>

@{
  ViewData["Title"] = "BlogListByWriter";
  Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<br />
<a href="/Blog/BlogAdd/" class="btn btn-reddit">Yeni Blog Oluştur</a>
<br />
<br />
<table class="table table-bordered">
  <tr>
    <th>#</th>
    <th>Blog Başlığı</th>
    <th>Oluşturma Tarihi</th>
    <th>Kategori</th>
    <th>Durum</th>
    <th>Sil</th>
    <th>Düzenle</th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>@item.BlogId</td>
      <td>@item.BlogTitle</td>
      <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
      <td>@item.Category.CategoryName</td>

      @if (item.BlogStatus == true)
      {
        <td>Aktif</td>
      }
      @if (item.BlogStatus == false)
      {
        <td>Pasif</td>
      }

      <td><a href="/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Sil</a></td>
      <td><a href="/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>
    </tr>
  }
</table>
<br />


